<body class="home_body">
    <div class="container-fluid">
        <div class="home-div">
            <div class="logo-title">
                <img src="/SoMate-logo.png" width="100%">
            </div>

            <div class="my-history-div">
                <div class="page-title">
                    <a href='/index/<%= account %>'>
                        <img src="/left-arrow.png" width="25px">
                    </a>
                    <h2 class="font" align="center">我的歷史紀錄</h2>
                    <img src="/left-arrow.png" width="25px" style="opacity: 0;">
                </div>

                <div class="page-title">
                    <a href='/my-history/change-date/pre&<%= Date.strptime(date_start, '%m/%d') %>'>
                        <img src="/date-left-arrow.png" width="30px">
                    </a>
                    <h3 class="font" align="center" style="color: #A4A1A1;">
                        <%= date_start %>（一）～ <%= date_end %>（日）
                    </h3>
                    <a href='/my-history/change-date/post&<%= Date.strptime(date_start, '%m/%d') %>'>
                        <img src="/date-right-arrow.png" width="30px">
                    </a>
                </div>

                <div class="history-record">
                    <p class="font small-btn-string">3/20 (一)</p>
                    <div class="history-record-content">
                        <div class="history-record-content-data">
                            <div class="use-time">
                                <img src="/history-use-time.png" width="32px">
                                <p class="font content">111</p>
                            </div>
                            <div class="emoji-score">
                                <img src="/history-emoji.png" width="32px">
                                <p class="font content">3</p>
                            </div>
                        </div>
                        <img src="/countermeasure-alert-arrow.png" width="18px">
                    </div>
                </div>
            </div>

            <div class="navbar-div">
                <div class="navbar-div-bottom">
                    <a href='/fomo-dic'>
                        <img src="/fomo-dic.png" width="97px">
                    </a>

                    <img src="/my-history-click.png" width="97px">
                </div>

                <% if is_record %>
                    <input class="start_btn small-btn-string font" type="button" disabled="disabled" style="color: #AACFD1;" value="已完成&#x00A;今日紀錄">
                <% else %>
                    <a href='/meditation/<%= account %>'>
                        <input class="start_btn big-btn-string font" type="button" value="開始&#x00A;記錄">
                    </a>
                <% end %>
            </div>
        </div>

    </div>
    <script>
    $(document).ready(function() {
        if(<%= records.length != 0 %>) {  // 如果有資料就顯示下面的小卡
            var card_data = new Array();
            card_data = <%= records.map { |r| [r.id, r.created_at.strftime("%m / %d (%a)"), r.owned_answers.map {|a| a.answer_content if a.question_num == 1}.join, r.owned_answers.map {|a| a.answer_content if a.question_num == 7}.join]} %>;

            // create cards html
            var card_html = `<div class="swiper-container">
                                <div class="swiper-wrapper">`;
            card_data.reverse().forEach(content => {
                card_html += `<div class="swiper-slide">
                                    <div class="slide_card">
                                        <div class="card_title">
                                            <p class="card_header font">${content[1]}</p>
                                        </div>
                                        <div class="card_body">
                                            <b class="card_content_title">使用時間</b><br>
                                            <p class="card_content font">${content[2]}</p>
                                            <b class="card_content_title">我的祝福</b><br>
                                            <p class="card_content font">${content[3]}</p>
                                            <a href="/form_record/${content[0]}/<%= account %>"><h2 class="card_btn font">查看更多 <i class="fas fa-arrow-circle-right"></i></h2></a>
                                        </div>
                                    </div>
                                </div>`;
            });
            card_html += "</div></div>";

            // replace no_record area
            // $(".no_record").remove();
            $(".my-history-div").append(card_html);

            // 初始化 swiper
            var mySwiper = new Swiper('.swiper-container', {
                slidesPerView: "auto",
                spaceBetween: 12
            }); 
        }
    });
    </script>
</body>