<body>
    <div class="container-fluid">
        <!-- Form Question & Title -->
        <div class="form-top">
            <div style="width: 88vw;">
                <h2 class="form-qnumber font">第二題</h2>
                <div class="form-progress-line-frame">
                    <hr class="form-progress-line-progress" style="width: 72px;">
                    <hr class="form-progress-line-leave">
                </div>
            </div>

            <div class="form-q-d">
                <h2 class="form-qtitle font">你/妳今天在哪些時段使用 IG？（可複選）</h2>
                <!-- info alert -->
                <div id="info-default" class="info-alert">
                    <div class="info-content info-default">
                        <div style="display: flex; flex-direction: row; align-items: flex-start; gap: 12px;">
                            <img src="/information-icon.png" width="25px">
                            <p class="font content">早上、下午、晚上的時間區間</p>
                        </div>
                        <img src="/arrow-down.png" width="25px">
                    </div>
                </div>
                <div id="info-extend" class="info-alert" style="display: none;">
                    <div class="info-content info-extend">
                        <img src="/information-icon.png" width="25px">
                        <div class="font content">
                            時間區間：<br>
                            <ul style="margin: 0px;">
                                <li>早上：6:00~11:59</li>
                                <li>下午：12:00~17:59</li>
                                <li>晚上：18:00~</li>
                            </ul>
                        </div>
                    </div>
                </div>
            </div>
        </div>

        <!-- Selections -->
        <form role="form" id="form_answers" method="POST" action="/form_3/<%= account %>">
            <div class="form-content">
                <div class="q-div">

                    <div class="form-check form-check-inline select-option">
                        <input class="form-check-input" type="checkbox" id="option-wakeup" name="q2_ans" value="早上起床後 15 分鐘內">
                        <label class="form-check-label font small-btn-string" for="option-wakeup"><p>早上起床後 15 分鐘內<p></label>
                    </div>

                    <div class="sub-select-option">
                        <div class="sub-select-option-title">
                            <p class="font small-btn-string">吃飯時</p>
                            <img class="close-img" src="/arrow-down.png" width="25px">
                            <img class="extend-img" src="/arrow-up.png" style="display: none;" width="25px">
                        </div>
                        <div class="form-check form-check-inline sub-select-option-content" style="display: none;">
                            <input class="form-check-input" type="checkbox" id="option-eat-breakfast" name="q2_ans" value="吃早餐時">
                            <label class="form-check-label font" for="option-eat-breakfast"><h3>早餐</h3></label>
                        </div>
                        <div class="form-check form-check-inline sub-select-option-content" style="display: none;">
                            <input class="form-check-input" type="checkbox" id="option-eat-lunch" name="q2_ans" value="吃午餐時">
                            <label class="form-check-label font" for="option-eat-lunch"><h3>午餐</h3></label>
                        </div>
                        <div class="form-check form-check-inline sub-select-option-content" style="display: none;">
                            <input class="form-check-input" type="checkbox" id="option-eat-dinner" name="q2_ans" value="吃晚餐時">
                            <label class="form-check-label font" for="option-eat-dinner"><h3>晚餐</h3></label>
                        </div>
                    </div>

                    <div class="sub-select-option">
                        <div class="sub-select-option-title">
                            <p class="font small-btn-string">上廁所時</p>
                            <img class="close-img" src="/arrow-down.png" width="25px">
                            <img class="extend-img" src="/arrow-up.png" style="display: none;" width="25px">
                        </div>
                        <div class="form-check form-check-inline sub-select-option-content" style="display: none;">
                            <input class="form-check-input" type="checkbox" id="option-toilet-morning" name="q2_ans" value="早上上廁所時">
                            <label class="form-check-label font" for="option-toilet-morning"><h3>早上</h3></label>
                        </div>
                        <div class="form-check form-check-inline sub-select-option-content" style="display: none;">
                            <input class="form-check-input" type="checkbox" id="option-toilet-afternoon" name="q2_ans" value="下午上廁所時">
                            <label class="form-check-label font" for="option-toilet-afternoon"><h3>下午</h3></label>
                        </div>
                        <div class="form-check form-check-inline sub-select-option-content" style="display: none;">
                            <input class="form-check-input" type="checkbox" id="option-toilet-evening" name="q2_ans" value="晚上上廁所時">
                            <label class="form-check-label font" for="option-toilet-evening"><h3>晚上</h3></label>
                        </div>
                    </div>

                    <div class="sub-select-option">
                        <div class="sub-select-option-title">
                            <p class="font small-btn-string">工作/讀書時</p>
                            <img class="close-img" src="/arrow-down.png" width="25px">
                            <img class="extend-img" src="/arrow-up.png" style="display: none;" width="25px">
                        </div>
                        <div class="form-check form-check-inline sub-select-option-content" style="display: none;">
                            <input class="form-check-input" type="checkbox" id="option-workstudy-morning" name="q2_ans" value="早上工作/讀書時">
                            <label class="form-check-label font" for="option-workstudy-morning"><h3>早上</h3></label>
                        </div>
                        <div class="form-check form-check-inline sub-select-option-content" style="display: none;">
                            <input class="form-check-input" type="checkbox" id="option-workstudy-afternoon" name="q2_ans" value="下午工作/讀書時">
                            <label class="form-check-label font" for="option-workstudy-afternoon"><h3>下午</h3></label>
                        </div>
                        <div class="form-check form-check-inline sub-select-option-content" style="display: none;">
                            <input class="form-check-input" type="checkbox" id="option-workstudy-evening" name="q2_ans" value="晚上工作/讀書時">
                            <label class="form-check-label font" for="option-workstudy-evening"><h3>晚上</h3></label>
                        </div>
                    </div>

                    <div class="sub-select-option">
                        <div class="sub-select-option-title">
                            <p class="font small-btn-string">通勤時</p>
                            <img class="close-img" src="/arrow-down.png" width="25px">
                            <img class="extend-img" src="/arrow-up.png" style="display: none;" width="25px">
                        </div>
                        <div class="form-check form-check-inline sub-select-option-content" style="display: none;">
                            <input class="form-check-input" type="checkbox" id="option-transportation-morning" name="q2_ans" value="早上通勤時">
                            <label class="form-check-label font" for="option-transportation-morning"><h3>早上</h3></label>
                        </div>
                        <div class="form-check form-check-inline sub-select-option-content" style="display: none;">
                            <input class="form-check-input" type="checkbox" id="option-transportation-afternoon" name="q2_ans" value="下午通勤時">
                            <label class="form-check-label font" for="option-transportation-afternoon"><h3>下午</h3></label>
                        </div>
                        <div class="form-check form-check-inline sub-select-option-content" style="display: none;">
                            <input class="form-check-input" type="checkbox" id="option-transportation-evening" name="q2_ans" value="晚上通勤時">
                            <label class="form-check-label font" for="option-transportation-evening"><h3>晚上</h3></label>
                        </div>
                    </div>

                    <div class="sub-select-option">
                        <div class="sub-select-option-title">
                            <p class="font small-btn-string">運動時</p>
                            <img class="close-img" src="/arrow-down.png" width="25px">
                            <img class="extend-img" src="/arrow-up.png" style="display: none;" width="25px">
                        </div>
                        <div class="form-check form-check-inline sub-select-option-content" style="display: none;">
                            <input class="form-check-input" type="checkbox" id="option-exercise-morning" name="q2_ans" value="早上運動時">
                            <label class="form-check-label font" for="option-exercise-morning"><h3>早上</h3></label>
                        </div>
                        <div class="form-check form-check-inline sub-select-option-content" style="display: none;">
                            <input class="form-check-input" type="checkbox" id="option-exercise-afternoon" name="q2_ans" value="下午運動時">
                            <label class="form-check-label font" for="option-exercise-afternoon"><h3>下午</h3></label>
                        </div>
                        <div class="form-check form-check-inline sub-select-option-content" style="display: none;">
                            <input class="form-check-input" type="checkbox" id="option-exercise-evening" name="q2_ans" value="晚上運動時">
                            <label class="form-check-label font" for="option-exercise-evening"><h3>晚上</h3></label>
                        </div>
                    </div>

                    <div class="form-check form-check-inline select-option">
                        <input class="form-check-input" type="checkbox" id="option-bath" name="q2_ans" value="洗完澡後 15 分鐘內">
                        <label class="form-check-label font small-btn-string" for="option-bath"><p>洗完澡後 15 分鐘內<p></label>
                    </div>

                    <div class="form-check form-check-inline select-option">
                        <input class="form-check-input" type="checkbox" id="option-sleep" name="q2_ans" value="晚上睡覺前 15 分鐘內">
                        <label class="form-check-label font small-btn-string" for="option-sleep"><p>晚上睡覺前 15 分鐘內<p></label>
                    </div>

                    <div class="form-check form-check-inline select-option">
                        <input class="form-check-input" type="checkbox" id="option-other" name="q2_ans" value="其他">
                        <label class="form-check-label font small-btn-string" for="option-other">
                            <p>
                                其他：
                                <input class="form-check-input other-text" type="text" name="q2_ans_other" value="">
                            <p>
                        </label>
                    </div>

                </div>
            </div>

            <div class="form-footer">
                <input class="fill_time" name="fill_time" type="hidden" value="<%= fill_time %>">
                <input class="q1_ans" name="1" type="hidden" value="<%= q1_ans %>">
                <!-- 
                <input id="to_last_page" class="btn-second font" type="button" value="上一題">
                -->
                <input class="btn font" type="submit" style="width:100%; justify-content: center;" value="下一題">
            </div>
        </form>
    </div>

    <script>
        // hide or show the information alert div
        $("#info-default").click(function() {
            $("#info-default").hide();
            $("#info-extend").show();
        });
        $("#info-extend").click(function() {
            $("#info-extend").hide();
            $("#info-default").show();
        });

        // select-option select and unselect
        $(".select-option").click(function() {
            if($(this).hasClass("select-option-extend")) {
                // unselect
                var other_val = $(this).find("label").find("p").find("input").val();
                if(other_val == "" || other_val == undefined){
                    $(this).removeClass("select-option-extend");
                }
            } else {
                // select
                $(this).addClass("select-option-extend");
            }
        });
        $(".small-btn-string.form-check-label").click(function() { 
            // can also add/remove class if they tape text
            if($(this).parent(".select-option").hasClass("select-option-extend")) {
                // unselect
                $(this).parent(".select-option").removeClass("select-option-extend");
            } else {
                // select
                $(this).parent(".select-option").addClass("select-option-extend");
            }
        });

        // sub-select-option-title close and extend
        $(".sub-select-option-title").click(function() {
            var parent = $(this).parent(".sub-select-option");
            if(parent.hasClass("sub-select-option-extend")) {
                // close
                parent.removeClass("sub-select-option-extend");
                $(this).siblings('.sub-select-option-content').hide();
                $(this).find(".extend-img").hide()
                $(this).find(".close-img").show()
            } else {
                // open aka extend
                parent.addClass("sub-select-option-extend");
                $(this).siblings('.sub-select-option-content').show();
                $(this).find(".extend-img").show()
                $(this).find(".close-img").hide()
            }
        });

        // other text input
        $(".other-text").change(function() {
            var ele = $(this).closest(".select-option")
            if ($(this).val() !== "") {
                if (!ele.hasClass("select-option-extend")) {
                    ele.addClass("select-option-extend");
                }
            } else {
                if (ele.hasClass("select-option-extend")) {
                    ele.removeClass("select-option-extend");
                }
            }
        });

        // get the start time (計算填寫時間)
        var time_start = new Date();  
        var clock_start = time_start.getTime();  

        // 計算填寫時間
        function get_time_spent (){   
            var time_now = new Date();  
            return((time_now.getTime() - clock_start)/1000 + <%= fill_time %>);   
        }

        // to home page btn alert
        $("#to_last_page").click(function() {
            var data = { // Your data object
                fill_time: get_time_spent(),
                q1_ans: $(".q1_ans").val()
            };
            var link = "/form/<%= account %>";

            $.post(link, data, function(response) {
                // Success callback function
                console.log("Post success");
                console.log(response);
            }).fail(function() {
                // Error callback function
                console.log("Post error");
            });
        });

        $('#form_answers').submit(function() {
            // 確認 select-option 的 selected 內容
            $(".select-option").each(function() {
                if ($(this).hasClass("select-option-extend")) {
                    // Check the checkbox
                    $(this).find("input[type=checkbox]").prop("checked", true);
                } else {
                    // Uncheck the checkbox
                    $(this).find("input[type=checkbox]").prop("checked", false);
                }
            });

            // other_ans string append to form ans
            if($(".other-text").val() !== "") {
                $(".other-text").closest("label").siblings("input").val("其他：" + $(".other-text").val());
            } else {
                $(".other-text").closest("label").siblings("input").prop("checked", false);
            }

            // 加入表單填寫時間
            $(".fill_time").val(get_time_spent());
            
            return true;
        });
    </script>
</body>